= form_for(@client) do |f| 
  - if @client.errors.any?
    #error_explanation
      %h2
        = pluralize(@client.errors.count, "error")
        = "#{t(:prohibited_this_client_from_being_saved)}:"
      %ul
      - @client.errors.full_messages.each do |msg|
        %li= msg

  .work_unit_field
    = f.label :name
    = f.text_field :name
  .work_unit_field
    = f.label :initials
    = f.text_field :initials
  .work_unit_field
    = f.label :status
    = f.select :status, client_status_select(@client.status)
  .actions
    = f.submit :class => "add_new_button"
    = link_to t(:cancel), clients_path, :class => "cancel_button"
  .clear
