= form_for user, :url => change_password_user_path(user) do |f|
  %fieldset
    %legend= t(:change_password)
    .clearfix
      %label{:for => "user_password"}= t(:password)
      .input
        = f.password_field :password, { :value => '' }
    .clearfix
      %label{:for => "user_password_confirmation"}= t(:password_confirmation)
      .input
        = f.password_field :password_confirmation, { :value => '' }
    .actions
      = submit_tag t(:change_password), :class => 'btn primary'
